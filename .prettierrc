{
    "singleQuote": true,
    "printWidth": 100,
    "proseWrap": "always",
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "semi": true,
    "endOfLine": "crlf",
    "overrides": [
        {
            "files": "**/*.{hbs}",
            "options": {
                "parser": "glimmer"
            }
        }
    ]
}
