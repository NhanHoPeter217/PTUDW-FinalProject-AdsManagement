<script>

    function formatDate(date) {
        const date_ = new Date(date);

        const day = date_.getDate();
        const month = date_.getMonth() + 1;
        const year = date_.getFullYear();

        const date_format = `${(month < 10 ? '0' : '') + month}/${(day < 10 ? '0' : '') + day}/${year}`;

        return date_format;
    }

