            else {
                const name = $(this).find('#edit_adsFormatName').val();
                const data = {
                    name: name,
                };

                fetch(`/api/v1/adsFormat/${id}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
