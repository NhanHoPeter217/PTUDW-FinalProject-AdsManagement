{{#section 'css'}}
<link rel="stylesheet" href="public/css/adpointInfo.css" />
<link rel="stylesheet" href="public/css/adsBoard.css" />
<link rel="stylesheet" href="public/css/report.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/css/fileinput.min.css">
{{/section}}
{{#section 'js'}}
<script>
    const district_data = [];
    function appendDistrict(){
        let wards = [];
        {{#each districts}}
        wards = `{{this.wards}}`.split(',');
        district_data.push({
            districtName: `{{this.districtName}}`,
            wards: wards
        });
        {{/each}}
    }

    appendDistrict();
</script>
<script src='public/js/listAdsBoard.js' type="module"></script>
{{/section}}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">
            <a role="button" href="adsBoard/adsPoint/{{adsPoint._id}}" class="btn btn-outline-dark mb-3">
                <div id="buttonStyle">
                    <img src="public/assets/icons/Back_icon.svg" alt="" width="24" height="24" />
                    Trở về
                </div>
            </a>
        </div>
        <div class="col-md-8">
            <div class="card w-100 mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title fw-semibold" id="tableName">
                            <img src="public/assets/icons/List_icon.svg" alt="" width="24" height="24" />
                            Danh sách các yêu cầu cấp phép của {{adsBoard.adsBoardType}}
                        </h5>
                    </div>
                    <div class="table-responsive">
                        <div class="table-body-container" style="height: 75vh; overflow-y: auto;">
                            {{#each adsBoard.licenseRequestedAdsBoard as |licenseRequestedAdsBoard index|}}
                            <div class='mb-3 d-grid gap-2 me-2 ms-2 mt-2'>
                                <div class="fw-bold text-warning fs-4">YÊU CẦU CẤP PHÉP {{create_order index}}</div>
                                <div class='card border'>
                                    <div class='card-body'>
                                        <h5 class='card-title fw-semibold'>Loại bảng quảng cáo</h5>
                                        <p class='mb-0 text-primary fw-semibold' id="adsBoardType">{{adsBoardType}}</p>
                                    </div>
                                </div>
                                <div class='card border'>
                                    <div class='card-body'>
                                        <h5 class='card-title fw-semibold'>Điểm quảng cáo</h5>
                                        <p class='mb-0' id="locationName">{{../adsPoint.location.locationName}}</p>
                                    </div>
                                </div>
                                <div class='card border'>
                                    <div class='card-body'>
                                        <h5 class='card-title fw-semibold'>Địa chỉ</h5>
                                        <p class='mb-0' id="locationName">{{../adsPoint.location.address}}</p>
                                    </div>
                                </div>
                                <div class='card border'>
                                    <div class='card-body'>
                                        <h5 class='card-title fw-semibold'>Loại vị trí</h5>
                                        <p class='mb-0' id="locationName">{{../adsPoint.locationType}}</p>
                                    </div>
                                </div>
                                <div class='card border'>
                                    <div class='card-body'>
                                        <h5 class='card-title fw-semibold'>Hình thức quảng cáo</h5>
                                        <p class='mb-0' id="locationName">{{../adsPoint.adsFormat.name}}</p>
                                    </div>
                                </div>
                                <div class='card border'>
                                    <div class='card-body'>
                                        <h5 class='card-title fw-semibold mb-4'>Trạng thái địa điểm</h5>
                                        {{#ifCond ../adsPoint.planningStatus "===" "Đã quy hoạch"}}
                                        <span class="badge bg-primary rounded-3 fw-semibold">Đã quy hoạch</span>
                                        {{else}}
                                        <span class="badge bg-danger rounded-3 fw-semibold">Chưa quy hoạch</span>
                                        {{/ifCond}}
                                    </div>
                                </div>
                                <div class="row gx-2">
                                    <div class='col-md-6'>
                                        <div class='card border'>
                                            <div class='card-body'>
                                                <h5 class='card-title fw-semibold mb-4'>Kích thước</h5>
                                                <p class='mb-0'>{{size.width}}m x {{size.height}}m</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class='col-md-6'>
                                        <div class='card border'>
                                            <div class='card-body'>
                                                <h5 class='card-title fw-semibold mb-4'>Số lượng</h5>
                                                <p class='mb-0'>{{licenseRequestedAdsBoard.quantity}}</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class='card border'>
                                        <div class='card-body'>
                                            <h5 class='card-title fw-semibold'>Hình ảnh</h5>
                                            {{#each adsBoardImages as |image|}}
                                            <img src="{{image}}" width="650" class="mb-2"/>
                                            {{else}}
                                            <p class='mb-0 text-warning fw-semibold'>Không có hình ảnh</p>
                                            {{/each}}
                                        </div>
                                    </div>
                                    {{#each adsLicenseRequest as |adsLicenseRequest|}}
                                    <div class='card border'>
                                        <div class='card-body'>
                                            <h5 class='card-title fw-semibold'>Tên công ty đặt quảng cáo</h5>
                                            <p class='mb-0' id="contractEndDate">{{companyInfo.name}}</p>
                                        </div>
                                    </div>
                                    <div class='card border'>
                                        <div class='card-body'>
                                            <h5 class='card-title fw-semibold'>Email công ty</h5>
                                            <p class='mb-0' id="contractEndDate">{{companyInfo.email}}</p>
                                        </div>
                                    </div>
                                    <div class='card border'>
                                        <div class='card-body'>
                                            <h5 class='card-title fw-semibold'>Điện thoại công ty</h5>
                                            <p class='mb-0' id="contractEndDate">{{companyInfo.phone}}</p>
                                        </div>
                                    </div>
                                    <div class='card border'>
                                        <div class='card-body'>
                                            <h5 class='card-title fw-semibold'>Địa chỉ công ty</h5>
                                            <p class='mb-0' id="contractEndDate">{{companyInfo.address}}</p>
                                        </div>
                                    </div>
                                    <div class="row gx-2">
                                        <div class='col-md-6'>
                                            <div class='card border'>
                                                <div class='card-body'>
                                                    <h5 class='card-title fw-semibold mb-4'>Ngày bắt đầu hợp đồng</h5>
                                                    <p class='mb-0'>{{contractStartDate}}</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class='col-md-6'>
                                            <div class='card border'>
                                                <div class='card-body'>
                                                    <h5 class='card-title fw-semibold mb-4'>Ngày kết thúc hợp đồng</h5>
                                                    <p class='mb-0'>{{licenseRequestedAdsBoard.contractEndDate}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class='card border'>
                                        <div class='card-body'>
                                            <h5 class='card-title fw-semibold mb-4'>Tình trạng cấp phép</h5>
                                            {{#ifCond requestApprovalStatus '===' 'Đã được duyệt'}}
                                                <div class="d-flex gap-2">
                                                    <span class="badge bg-success rounded-3 fw-semibold">Đã được duyệt</span>
                                                </div>
                                            {{else}}
                                                <div class="d-flex gap-2">
                                                    <span class="badge bg-warning rounded-3 fw-semibold">Chưa được duyệt</span>
                                                </div>
                                            {{/ifCond}}
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<title>Cấp phép hiện có</title>