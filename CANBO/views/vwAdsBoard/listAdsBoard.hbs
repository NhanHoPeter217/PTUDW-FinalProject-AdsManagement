{{!-- Role của User, lưu để script lấy xài --}}
<meta data-role="{{authUser.role}}">

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <a role="button" href="/adsPoint/allPoints" class="btn btn-outline-dark mb-3">
                <div id="buttonStyle">
                    <img src="public/assets/icons/Back_icon.svg" alt="" width="24" height="24" />
                    Trở về
                </div>
            </a>
            <div class="card w-100 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title fw-semibold mb-4" id="tableName">
                            <img src="public/assets/icons/List_icon.svg" alt="" width="24" height="24" />
                            Danh sách bảng đặt quảng cáo
                        </h5>
                        {{#ifCond authUser.role '===' 'Sở VH-TT'}}
                        <button type="button" class="btn btn-success btn-custom" data-bs-toggle="modal" data-bs-target="#addAdsBoardModal">
                            <img src="public/assets/icons/Add_icon_white.svg" alt="" width="24" height="24" class="me-2" />
                            Thêm bảng quảng cáo
                        </button>
                        {{/ifCond}}
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover text-center" style="table-layout: fixed; width: 100%;">
                            <colgroup>
                                <col style="width: 3%">
                                <col style="width: 20%">
                                <col style="width: 10%">
                                <col style="width: 10%">
                                <col style="width: 20%">
                                <col style="width: 15%">
                                <col style="width: 15%">
                            </colgroup>
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Loại bảng quảng cáo</th>
                                    <th scope="col">Kích thước</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Quận</th>
                                    {{#ifCond authUser.role '===' 'Sở VH-TT'}}
