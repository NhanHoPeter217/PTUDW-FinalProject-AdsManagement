                                    {{else}}
                                        <th scope="col">Yêu cầu cấp phép</th>
                                    {{/ifCond}}
                                    {{#ifCond authUser.role '===' 'Sở VH-TT'}}
                                        <th scope="col">Thao tác</th>
                                    {{else}}
                                        <th scope="col">Yêu cầu chỉnh sửa</th>
                                    {{/ifCond}}
                                </tr>
                            </thead>
                        </table>
                        <div class="table-body-container" style="height: 57vh; overflow-y: auto;">
                            <table class="table table-bordered table-hover text-center">
                                <colgroup>
                                    <col style="width: 3%">
                                    <col style="width: 20%">
                                    <col style="width: 10%">
                                    <col style="width: 10%">
                                    <col style="width: 20%">
                                    <col style="width: 15%">
                                    <col style="width: 15%">
                                </colgroup>
                                <tbody id="body">
                                    {{#if this.empty}}
                                    <tr>
                                        <td class="card-body text-primary fw-semibold">Danh sách trống</td>
                                    </tr>
                                    {{else}}
                                    {{#each this.adsBoards as |adsBoards index|}}
