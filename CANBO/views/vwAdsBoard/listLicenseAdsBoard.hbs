{{#section 'css'}}
<link rel="stylesheet" href="https://unpkg.com/js-datepicker/dist/datepicker.min.css" />
<link rel="stylesheet" href="http://localhost:4000/public/css/report.css" />
<link rel="stylesheet" href="public/css/adpointInfo.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
{{/section}}

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script src="../../public/js/listLicenseAdsBoard.js" type="module"></script>
{{/section}}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-1"></div>
        <div class=" {{#ifCond authUser.role '===' 'Phường'}}col-md-10{{else}}col-md-8{{/ifCond}}">
            <div class="card w-100">
                <div class="card-body ps-4 pt-2">
                    <h5 class="card-title fw-semibold fs-5">
                        DANH SÁCH CÁC YÊU CẦU CẤP PHÉP
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover text-center" style="table-layout: fixed; width: 100%;">
                            <colgroup>
                                <col style="width: 3.5%">
                                <col style="width: 28%">
                                <col style="width: 29%">
                                <col style="width: 23%">
                                <col style="width: 15%">
                            </colgroup>
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col"><div class="card-title fw-bold" >#</div></th>
                                    <th scope="col"><div class="card-title fw-bold" >Loại bảng quảng cáo</div></th>
                                    <th scope="col"><div class="card-title fw-bold" >Địa điểm</div></th>
                                    <th scope="col"><div class="card-title fw-bold" >Tình trạng</div></th>
                                    {{#ifCond authUser.role '===' 'Sở VH-TT'}}
                                        <th scope="col"><div class="card-title fw-bold" >Xét duyệt</div></th>
                                    {{else}}
                                        <th scope="col"><div class="card-title fw-bold" >Yêu cầu</div></th>
                                    {{/ifCond}}
                                </tr>
                            </thead>
                        </table>
                        <div class="table-body-container" style="height: 63vh; overflow-y: auto;">
                            <table class="table table-bordered table-hover text-center">
                                <colgroup>
                                    <col style="width: 3%">
                                    <col style="width: 28%">
                                    <col style="width: 29%">
                                    <col style="width: 23%">
                                    <col style="width: 15%">
                                </colgroup>
                                <tbody id="body">
                                    {{#if adsLicenseRequestsEmpty}}
                                        <div class="card-body text-primary fw-semibold">Không có cấp phép nào</div>
                                    {{else}}
                                    {{#each adsLicenseRequests as |adsLicenseRequests index|}}
                                    <tr>
                                        <td class="border-bottom-0 text-center align-middle">
                                            <h6 class="mb-0">{{create_order index}}</h6>
                                        </td>
                                        <td class="border-bottom-0 text-center align-middle">
                                            {{licenseRequestedAdsBoard.adsBoardType}}
                                        </td>
                                        <td class="border-bottom-0 text-center align-middle">
                                            {{licenseRequestedAdsBoard.adsBoard.adsPoint.location.locationName}}
                                        </td>
                                        {{#ifCond requestApprovalStatus '===' 'Đã được duyệt'}}
                                        <td class="border-bottom-0 text-center align-middle">
                                            <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                                                <span class="badge bg-success rounded-3">Đã được duyệt</span>
                                            </div>
                                        </td>
                                        {{else}}
                                        <td class="border-bottom-0 text-center align-middle">
                                            <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                                                <span class="badge bg-warning rounded-3">Chưa được duyệt</span>
                                            </div>
                                        </td>
                                        {{/ifCond}}
                                        <td class="border-bottom-0 align-middle">
                                            <button
                                                type="button"
                                                class="btn btn-warning m-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#detailLicenseAdsBoardModal-{{_id}}">
                                                <div class="d-flex">
                                                <img src="../../../public/assets/icons/Verify_icon.svg" alt="" width="24" height="24" class="me-2" />
                                                <div style="color: white">Chi tiết</div>
                                                </div>
                                            </button>
                                        </td>
                                    </tr>
                                    <div
                                        class='modal fade'
                                        id='detailLicenseAdsBoardModal-{{_id}}'
                                        tabindex='-1'
                                        aria-labelledby='reportModalLabel'
                                        aria-hidden='true'
                                    >
                                        <div class='modal-dialog modal-dialog-centered modal-dialog-scrollable'>
                                            <div class='modal-content'>
                                                <div class='modal-header'>
                                                    <img
                                                        src='../../../public/assets/icons/Info_icon.svg'
                                                        style='height: 40px; width: 40px;'
                                                    />
                                                    <h5 class='modal-detail-title' id='reportModalLabel'>Thông tin cấp phép</h5>
                                                    <button
                                                        type='button'
                                                        class='btn-close'
                                                        data-bs-dismiss='modal'
                                                        aria-label='Close'
                                                    ></button>
                                                </div>
                                                <div class='modal-detail-body'>
                                                    <form id='detailLicenseAdsBoardForm' data-id={{_id}} enctype='multipart/form-data'>
                                                        <div class='mb-3 d-grid gap-2 me-2 ms-2 mt-2'>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Loại bảng quảng cáo</h5>
                                                                    <p class='mb-0 fw-semibold'>{{licenseRequestedAdsBoard.adsBoardType}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Điểm quảng cáo</h5>
                                                                    <p class='mb-0 fw-semibold'>{{licenseRequestedAdsBoard.adsBoard.adsPoint.location.locationName}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Địa chỉ</h5>
                                                                    <p class='mb-0'>{{licenseRequestedAdsBoard.adsBoard.adsPoint.location.address}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Loại vị trí</h5>
                                                                    <p class='mb-0'>{{licenseRequestedAdsBoard.adsBoard.adsPoint.locationType}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Hình thức quảng cáo</h5>
                                                                    <p class='mb-0'>{{licenseRequestedAdsBoard.adsBoard.adsPoint.adsFormat.name}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Trạng thái địa điểm</h5>
                                                                        {{#ifCond licenseRequestedAdsBoard.adsBoard.adsPoint.planningStatus "===" "Đã quy hoạch"}}
                                                                        <span class="badge bg-primary rounded-3 fw-semibold">Đã quy hoạch</span>
                                                                        {{else}}
                                                                        <span class="badge bg-danger rounded-3 fw-semibold">Chưa quy hoạch</span>
                                                                        {{/ifCond}}
                                                                </div>
                                                            </div>
                                                            <div class="row gx-2">
                                                                <div class='col-md-6'>
                                                                    <div class='card border'>
                                                                        <div class='card-body'>
                                                                            <h5 class='card-title fw-semibold mb-4'>Kích thước</h5>
                                                                            <p class='mb-0'>{{licenseRequestedAdsBoard.size.width}}m x {{licenseRequestedAdsBoard.size.height}}m</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class='col-md-6'>
                                                                    <div class='card border'>
                                                                        <div class='card-body'>
                                                                            <h5 class='card-title fw-semibold mb-4'>Số lượng</h5>
                                                                            <p class='mb-0'>{{licenseRequestedAdsBoard.quantity}}</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Hình ảnh</h5>
                                                                    {{#each licenseRequestedAdsBoard.adsBoardImages as |image|}}
                                                                    <img src="{{image}}" width="650" class="mb-2">
                                                                    {{else}}
                                                                    <p class='mb-0 text-warning fw-semibold'>Không có hình ảnh</p>
                                                                    {{/each}}
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Tên công ty đặt quảng cáo</h5>
                                                                    <p class='mb-0'>{{companyInfo.name}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Email công ty</h5>
                                                                    <p class='mb-0'>{{companyInfo.email}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Điện thoại công ty</h5>
                                                                    <p class='mb-0'>{{companyInfo.phone}}</p>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Địa chỉ công ty</h5>
                                                                    <p class='mb-0'>{{companyInfo.phone}}</p>
                                                                </div>
                                                            </div>
                                                            <div class="row gx-2">
                                                                <div class='col-md-6'>
                                                                    <div class='card border'>
                                                                        <div class='card-body'>
                                                                            <h5 class='card-title fw-semibold mb-4'>Ngày bắt đầu hợp đồng</h5>
                                                                            <p class='mb-0'>{{contractStartDate}}</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class='col-md-6'>
                                                                    <div class='card border'>
                                                                        <div class='card-body'>
                                                                            <h5 class='card-title fw-semibold mb-4'>Ngày kết thúc hợp đồng</h5>
                                                                            <p class='mb-0'>{{licenseRequestedAdsBoard.contractEndDate}}</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class='card border'>
                                                                <div class='card-body'>
                                                                    <h5 class='card-title fw-semibold mb-4'>Tình trạng cấp phép</h5>
                                                                    {{#ifCond requestApprovalStatus '===' 'Đã được duyệt'}}
                                                                        <div class="d-flex gap-2">
                                                                            <span class="badge bg-success rounded-3 fw-semibold">Đã được duyệt</span>
                                                                        </div>
                                                                    {{else}}
                                                                        <div class="d-flex gap-2">
                                                                            <span class="badge bg-warning rounded-3 fw-semibold">Chưa được duyệt</span>
                                                                        </div>
                                                                    {{/ifCond}}
                                                                </div>
                                                            </div>
                                                            {{#ifCond requestApprovalStatus '===' 'Chưa được duyệt'}}
                                                            {{#ifCond ../authUser.role '===' 'Sở VH-TT'}}
                                                                {{!-- <div class="d-flex justify-content-center mt-2">
                                                                    <div class='d-grid col-md-3 mx-2'>
                                                                        <button
                                                                            id='noVerifyRequestLicense'
                                                                            type='submit'
                                                                            class='btn btn-outline-danger btn-block'
                                                                            style='font-family: Inter'
                                                                        >
                                                                            KHÔNG DUYỆT
                                                                        </button>
                                                                    </div> --}}
                                                                    <div class='d-grid gap-2 col-3 mx-auto'>
                                                                        <button
                                                                            id='verifyRequestLicense'
                                                                            type='submit'
                                                                            class='btn btn-success'
                                                                            style='font-family: Inter'
                                                                        >
                                                                            DUYỆT
                                                                        </button>
                                                                    </div>
                                                                {{!-- </div> --}}
                                                            {{else}}
                                                                <div class="d-flex justify-content-center mt-2">
                                                                    <div class='d-grid col-md-3 mx-2'>
                                                                        <button
                                                                            id='deleteRequestLicense'
                                                                            type='submit'
                                                                            class='btn btn-outline-danger btn-block'
                                                                            style='font-family: Inter'
                                                                        >
                                                                            HỦY YÊU CẦU
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            {{/ifCond}}
                                                            {{/ifCond}}
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                    {{/if}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#ifCond authUser.role '===' 'Phường'}}
        {{else}}
        <div class="col-lg-2 col-md-3">
            <div class="pe-4">
                <h3 class="fw-bold mb-4 text-center">Lọc danh sách</h3>
                <div class="filter-container mb-3">
                    {{#ifCond authUser.role '===' 'Sở VH-TT'}}
                    <select id="license_filter_district" class="list-select list-select-sm custom-select fw-bold">
                        <option selected disabled>-- Chọn Quận --</option>
                        {{#each districts}}
                            <option value="{{districtName}}">Quận {{districtName}}</option>
                        {{/each}}
                    </select>
                    {{/ifCond}}
                    {{#ifCond authUser.role '===' 'Quận'}}
                    <select id="license_filter_district" class="list-select list-select-sm custom-select fw-bold" disabled>
                        <option value="{{authUser.assignedArea.district}}">Quận {{authUser.assignedArea.district}}</option>
                    </select>
                    {{/ifCond}}
                </div>
                <div class="list-group shadow-sm">
                    <div class="list-group-item d-flex list-group-item-action justify-content-between align-items-center active">
                        <span class="fw-bold">Danh sách các phường</span>
                    </div>
                    <div id="license_filter_ward" class="scrollable-list">
                    </div>
                    <div class="list-group-item d-flex list-group-item-action justify-content-between align-items-center active">
                    </div>
                </div>
            </div>
        </div>
        {{/ifCond}}
        {{#ifCond authUser.role '===' 'Quận'}}
        {{/ifCond}}
    </div>
</div>

<title>Danh sách các cấp phép</title>

{{> detailAdsBoard}}
{{> detailAdsPoint}}
{{> detailLicenseAdsBoard}}
{{> requestEditAdsBoard}}