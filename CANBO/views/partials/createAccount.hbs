
<div
    class='modal fade'
    id='createAccountModal'
    tabindex='-1'
    aria-labelledby='reportModalLabel'
    aria-hidden='true'
>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-detail-title'>
                    Tạo tài khoản
                </h5>
                <button
                    type='button'
                    class='btn-close'
                    data-bs-dismiss='modal'
                    aria-label='Close'
                ></button>
            </div>
            <div class='modal-body'>
                <form class='report-form' id='createAccountForm' enctype='multipart/form-data'>
                    <div class='mb-3'>
                        <label for='register_fullName' class='form-label' style='font-family: Inter;'>Họ và tên</label>
                        <input
                            type='text'
                            class='form-control fullNameReport'
                            id='register_fullName'
                            required
                        />
                    </div>
                    <div class='mb-3'>
                        <label for='userName' class='form-label' style='font-family: Inter;'>Tên tài khoản</label>
                        <input
                            type='text'
                            class='form-control fullNameReport'
                            id='userName'
                            required
                        />
                    </div>
                    <div class='mb-3'>
                        <label for='password' class='form-label' style='font-family: Inter'>Mật khẩu</label>
                        <div class='input-group'>
                            <input
                                type='password'
                                class='form-control'
                                id='password'
                                required
                            />
                            <button class='btn btn-outline-secondary' type='button' id='togglePassword'>
                                <i class='bi bi-eye'></i>
                            </button>
                        </div>
                    </div>
                    <div class='mb-3'>
                        <label for='confirmPassword' class='form-label' style='font-family: Inter'>Nhập lại mật khẩu</label>
                        <div class='input-group'>
                            <input
                                type='password'
                                class='form-control'
                                id='confirmPassword'
                                required
                            />
                            <button class='btn btn-outline-secondary' type='button' id='toggleConfirmPassword'>
                                <i class='bi bi-eye'></i>
                            </button>
                        </div>
                    </div>
                    <div class='mb-3'>
                        <label for='register_DOB' class='form-label' style='font-family: Inter'>Ngày sinh</label>
                        <input type='text' id='register_DOB' class='form-control' required />
                    </div>
                    <div class='mb-3'>
                        <label for='email' class='form-label' style='font-family: Inter'>Email</label>
                        <input
                            type='text'
                            class='form-control fullNameReport'
                            id='email'
                            required
                        />
                    </div>
                    <div class='mb-3'>
                        <label for='phoneNumber' class='form-label' style='font-family: Inter'>Số điện thoại</label>
                        <input
                            type='text'
                            class='form-control fullNameReport'
                            id='phoneNumber'
                            required
                        />
                    </div>
                    <div class='mb-3'>
                        <label for='role' class='form-label' style='font-family: Inter'>Vai trò cán bộ</label>
                        <select class='form-select reportType' id='role' required>
                            <option
                                value='Phường'
                                selected
                            >
                                Phường
                            </option>
                            <option value='Quận'>
                                Quận
                            </option>
                        </select>
                    </div>
                    <div class='mb-3'>
                        <label for='district' class='form-label' style='font-family: Inter'>Quận</label>
                        <select class='form-select reportType' id='district' required>
                            <option
                                value='1'
                                selected
                            >
                                1
                            </option>
                            <option value='2'>
                                2
                            </option>
                            <option value='3'>3</option>
                        </select>
                    </div>
                    <div class='mb-3'>
                        <label for='ward' class='form-label' style='font-family: Inter'>Phường</label>
                        <select class='form-select reportType' id='ward' required>
                            <option
                                value='1'
                                selected
                            >
                                1
                            </option>
                            <option value='2'>
                                2
                            </option>
                            <option value='3'>3</option>
                        </select>
                    </div>
                    <div class='button-container justify-content-center'>
                        <div
                            id='recaptcha'
                            class='g-recaptcha'
                            data-sitekey='6Lc_OSwpAAAAAKbiLyvfB0hp7ORpvoRcMqTXv7qb'
                            data-callback='onSubmit'
                            data-size='invisible'
                        ></div>
                        <div class='d-grid gap-2 col-3 mx-auto'>
                            <button
                                id='createAccountButton'
                                type='button'
                                class='btn btn-primary'
                                style='font-family: Inter'
                            >
                                TẠO TÀI KHOẢN
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>