<div
    class='modal fade'
    id='addAdsBoardModal'
    tabindex='-1'
    aria-labelledby='add-adboard-ModalLabel'
    aria-hidden='true'
>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-requestEdit-title text-success ' id='add-adboard-ModalLabel'>
                    Bảng quảng cáo mới
                </h5>
                <button
                    type='button'
                    class='btn-close'
                    data-bs-dismiss='modal'
                    aria-label='Close'
                ></button>
            </div>
            <div class='modal-body'>
                <form id='add-adboard-form' enctype='multipart/form-data'>
                    <input type="hidden" name="adsPoint" value={{_id}}>
                    <div class='mb-3'>
                        <label class='form-label' style='font-family: Inter'>Điểm quảng cáo</label>
                        <input
                            type='text'
                            class='form-control'
                            value="{{location.locationName}}"
                            disabled
                        />
                    </div>
                    <div class='mb-3'>
                        <label class='form-label' style='font-family: Inter'>Địa chỉ</label>
                        <textarea
                            class='form-control'
                            style="height: 100px;"
                            disabled
                        >{{location.address}}</textarea>
                    </div>
                    {{!-- <div class='mb-3'>
                        <label class='form-label' style='font-family: Inter'>Hình thức
                            quảng cáo</label>
                        <select class='form-select reportType' name='adsBoardType' required>
                            <option
                                disabled
                                selected
                            > --- Chọn hình thức ---
                            </option>
                            {{#each adsFormats}}
                            <option value='{{this._id}}'>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div> --}}
                    <div class='mb-3'>
                        <label class='form-label' style='font-family: Inter'>Loại bảng
                            quảng cáo</label>
                        <select class='form-select' name='adsBoardType' required>
                            <option
                                disabled
                                selected
                            > --- Chọn loại bảng quảng cáo ---
                            </option>
                            {{#each adsBoardTypes}}
                            <option value='{{this}}'>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="d-flex flex-row column-gap-3">
                        <div class='mb-3'>
                            <label class='form-label' style='font-family: Inter'>Chiều cao (m)</label>
                            <input
                                type='text'
                                class='form-control'
                                name='height'
                                required
                            />
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' style='font-family: Inter'>Chiều rộng (m)</label>
                            <input
                                type='text'
                                class='form-control'
                                name='width'
                                required
                            />
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' style='font-family: Inter'>Số lượng</label>
                            <input
                                type='number'
                                class='form-control'
                                name='quantity'
                                required
                            />
                        </div>
                    </div>
                    <div class='mb-3'>
                        <label class='form-label' style='font-family: Inter'>Ngày
                            hết hạn của hợp đồng quảng cáo</label>
                        <input type='text' name="contractEndDate" class='form-control'  id='asidjasoidjadvv' required />
                    </div>
                    <div class='mb-3'>
                        <label for='image' class='form-label' style='font-family: Inter'>Hình ảnh</label>
                        <input
                            type='file'
                            class='form-control image-input'
                            name="adsBoardImages"
                            multiple
                        />
                    </div>
                    <div class='button-container justify-content-center'>
                        <div class='d-grid gap-2 col-3 mx-auto'>
                            <button
                                id='addButton'
                                type='submit'
                                class='btn btn-success m1'
                                style='font-family: Inter'
                            >
                                THÊM
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>