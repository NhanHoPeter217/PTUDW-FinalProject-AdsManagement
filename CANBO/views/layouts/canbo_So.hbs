            const picker1 = datepicker('#register_DOB', {
                formatter: (input, date, instance) => {
                    const options = {
                        day: 'numeric',
                        month: 'numeric',
                        year: 'numeric'
                    };
                    const value = date.toLocaleDateString('en-GB', options);
                    input.value = value; // '25/1/2099'
                },
